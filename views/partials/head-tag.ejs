    <script>
        function NavbarDropdown(e) {
            var target = e.target;
            
            if(target.id == "about-nav-btn"){
                document.getElementById("aboutDropdown").classList.toggle('show');
                
                if(document.getElementById("shopDropdown").classList.contains('show')) {
                    document.getElementById("shopDropdown").classList.remove('show');
                }
            } else if(target.id == "shop-nav-btn"){
                document.getElementById("shopDropdown").classList.toggle('show');  
                
                if(document.getElementById("aboutDropdown").classList.contains('show')) {
                    document.getElementById("aboutDropdown").classList.remove('show');
                }
            }
        }
        
        //Remove menus if anywhere except the menus are clicked.
        window.onclick = function(event) {
            if(!event.target.matches('.dropdown')) {
                if(document.getElementById("shopDropdown").classList.contains('show')) {
                    document.getElementById("shopDropdown").classList.remove('show');
                }
                if(document.getElementById("aboutDropdown").classList.contains('show')) {
                    document.getElementById("aboutDropdown").classList.remove('show');
                }
            }
        }
    </script>
